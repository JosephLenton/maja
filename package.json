{
  "name": "@maja-ui/core",
  "version": "3.0.0",
  "description": "A UI toolkit for building editors",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JosephLenton/maja.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "josephlenton@gmail.com",
  "license": "MIT",
  "typings": "./lib/index.d.ts",
  "source": "./src/index.ts",
  "main": "./lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "pnpm run clean && pnpm run build:src && pnpm run build:link-css",
    "build:src": "rollup --config ./rollup.config.ts --configPlugin typescript",
    "build:link-css": "sed -i $'s!//# sourceMappingURL=index.js.map!import \\'./index.css\\'\\\n//# sourceMappingURL=index.js.map!g' ./lib/index.js",
    "build:parcel": "parcel build",
    "clean": "pnpm run clean:build",
    "clean:build": "rimraf ./lib/*",
    "storybook": "NODE_OPTIONS=--openssl-legacy-provider start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy": "pnpm run build && pnpm publish"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "@maja-ui/util": "^3.3.0"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@rollup/plugin-typescript": "^8.3.4",
    "@storybook/addon-actions": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-links": "^6.5.12",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/cli": "^6.5.12",
    "@storybook/react": "^6.5.12",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "10.4.11",
    "babel-loader": "^8.2.5",
    "postcss": "^8.4.16",
    "postcss-extend": "1.0.5",
    "postcss-nested": "5.0.6",
    "postcss-nested-ancestors": "3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.78.0",
    "rollup-plugin-postcss": "^4.0.2",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "bugs": {
    "url": "https://github.com/JosephLenton/maja/issues"
  },
  "homepage": "https://github.com/JosephLenton/maja#readme",
  "keywords": [
    "ui",
    "components"
  ]
}
