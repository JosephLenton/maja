{
  "name": "maja",
  "version": "0.4.0",
  "description": "A UI toolkit for building editors",
  "main": "lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "directories": {
    "lib": "./lib"
  },
  "repository": "https://github.com/JosephLenton/maja",
  "author": "josephlenton@gmail.com",
  "license": "MIT",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "build": "yarn run clean && yarn run build:src",
    "build:src": "rollup --config ./rollup.config.ts --configPlugin typescript",
    "clean": "yarn run clean:build",
    "clean:build": "rimraf ./lib/*",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy": "yarn run build && yarn publish --access public"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "maja-util": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/cli": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "9.8.5",
    "babel-loader": "^8.2.3",
    "postcss": "^8.3.11",
    "postcss-custom-media": "7.0.8",
    "postcss-extend": "1.0.5",
    "postcss-nested": "4.2.3",
    "postcss-nested-ancestors": "2.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.59.0",
    "rollup-plugin-postcss": "^4.0.1",
    "tslib": "^2.3.1",
    "ttypescript": "^1.5.12",
    "typescript": "^4.4.4",
    "typescript-transform-paths": "^3.3.1"
  }
}
